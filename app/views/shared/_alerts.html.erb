<% if  flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "George Payne portfolio", sticky: false, time: 3000) %>
  <% elsif  flash[:error] %>
  <%= js add_gritter(flash[:error], title: "George Payne portfolio", sticky: false, time: 3000) %>
  <% else %>
  <%= js add_gritter(flash[:notice], title: "George Payne portfolio", sticky: false, time: 3000) %>
<% end %>