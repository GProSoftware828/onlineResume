<div class="app-card-container">
  <div class="card">
    <div class="skill">
      <%= image_tag "computer_code.jpg", width: '78%', alt: "Image still loading", class: "about-img" %>
    </div>
    <div class="skill">
      <h2>Percentage of Abilities - Each Skill</h2>
    </div>

    <hr>

